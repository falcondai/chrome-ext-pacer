doctype 5
html
  head
    title Pacer Options
    :stylus
      body
        font-family Ubuntu, Helvetica, sans-serif
      input 
        margin 10px
  body
    h1 Pacer Options
    div notification:
      input(type='checkbox')#notification
    div period: 
      input(type='range', min=1, max=60, step=1, value=5)#period
      span#period-indicator 5 minutes
    div volume: 
      input(type='range', min=0, max=1, step=0.01, value=1)#volume
      span#volume-indicator 100%
    script(src='/options.js')