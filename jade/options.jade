doctype 5
html
  head
    title Pacer Options
    link(rel='icon', href='/assets/image/logo.png')
    :stylus
      body
        font-family Ubuntu, Helvetica, sans-serif
      h1
        color steelblue
      input 
        margin 10px
        &[type="text"]
          font-size 1em
          border-radius 5px
          border 2px solid steelblue
          padding 5px
          &:focus
            outline none
      button
        font-size 1em
        padding 5px
        border-radius 5px

  body
    h1 Pacer Options
    div period: 
      input(type='range', min=1, max=60, step=1, value=5)#period
      span#period-indicator 5 minutes
    div volume: 
      audio(id='chime', src='/assets/sound/91926__corsica-s__ding.wav')
      input(type='range', min=0, max=1, step=0.01, value=1)#volume
      span#volume-indicator 100%
    div desktop notification:
      input(type='checkbox')#notification
      input(type='text', placeholder='some inspirational quote', size=64)#quote
    button#test show nudge sample
    script(src='/options.js')
